{
    "manifest_version": 2,
    "name": "DoctoChatBot",
    "description": "Chatbot pour Doctolib en extension Chrome",
    "version": "1.0",
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "https://www.doctolib.fr/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "ChatBot",
        "default_icon": "img/doctolib.png"
    },

    "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "web_accessible_resources": ["popup.html"]
}
